form.form-inline(ng-submit="login.submit()")
    .form-group
        label.sr-only(for="usernameInput") Username
        input.form-control(type="text", placeholder="username", required=true, ng-model="login.username")
    span &nbsp;
    .form-group
        label.sr-only(for="password") Password
        input.form-control(type="password", placeholder="password", required=true, ng-model="login.password")
    span &nbsp;
    button.btn.btn-primary(type="submit", value="Login") Login